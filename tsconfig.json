{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx", 
    "src/app/events/components/Backdrop/page.jsx", 
    "src/app/events/components/OpenDialogButton.jsx", 
    "src/app/events/components/OpenDialogButton.jsx", 
    "src/app/events/components/Modal/page.jsx" 
, "src/app/(dashboard)/me/page.tsx", "src/app/(dashboard)/me/components/Astronaut.jsx"  ]
}
